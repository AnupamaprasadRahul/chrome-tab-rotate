{
  "manifest_version": 2,

  "name": "Tab Rotate",
  "description": "Loop through a set of tabs - ideal for a Dashboard or Advertisement Display",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "img/Play-38.png",
    "default_popup": "play-pause.html",
    "default_title": "Start Tab Rotate"
  },
  "options_page": "settings.html",

  "background": {
    "scripts": ["bower_components/jquery/dist/jquery.min.js", "background.js"]
  },

  "icons": {
    "16": "img/Play-16.png",
    "32": "img/Play-32.png",
    "48": "img/Play-48.png",
    "128": "img/Play-128.png"
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/",
    "tabs"
  ]
}